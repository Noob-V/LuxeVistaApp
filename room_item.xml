<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/roomTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Room Title"
        android:textSize="20sp"
        android:textColor="@color/primary_text"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp" />

    <ImageView
        android:id="@+id/roomImage"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@+id/roomTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/luxe" />

    <TextView
        android:id="@+id/roomDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Description of the room"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/roomImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/roomPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price: LKR 00000 per night"
        android:textSize="16sp"
        android:textColor="@color/primary_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/roomDescription"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/roomAvailability"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Availability: Available"
        android:textSize="14sp"
        android:textColor="@color/secondary_text"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/roomPrice"
        app:layout_constraintStart_toStartOf="parent"/>

    <!-- Book Now Button -->
    <Button
        android:id="@+id/bookNowButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:backgroundTint="#000000"
        android:text="Book Now"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/roomAvailability" />
</androidx.constraintlayout.widget.ConstraintLayout>
